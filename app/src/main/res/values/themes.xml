<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/denim_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/denim_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.AppCompat.RatingBar.MyRating">
        <item name="colorAccent">#FFC107</item>
    </style>
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="background">@android:color/transparent</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>
    <style name="Theme.MovieApp.MySplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowSplashScreenBackground">@color/denim_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_film_2</item>
        <item name="postSplashScreenTheme">@style/Theme.MovieApp</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>

    </style>
</resources>