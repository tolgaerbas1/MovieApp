            android:innerRadius="0dp"
            android:shape="ring"
            android:thickness="4.5dp"
            android:useLevel="false">
            <solid android:color="@color/primary_main"/>
        </shape>
    </item>

    <item>
        <shape
            android:innerRadius="0dp"
            android:shape="ring"
            android:thickness="4.5dp"
            android:useLevel="false">
            <solid android:color="@color/white"/>
        </shape>
    </item>
</selector>